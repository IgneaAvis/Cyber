<mj-style>

/* global style in head */

/* black-theme support */

:root {
  color-scheme: light dark;
  supported-color-schemes: light dark;
}

/* menu-hover */

.views-title2--title2_item:hover{
  background-color:#e303fc !important;
  border-radius: 15px;
}


/* media */

@media screen and (max-width: 479px) {
  .views-main--group {
      width: 100%!important;
      max-width: 100% !important;
    }
}

@media screen and (min-width: 480px) {
  .views-main__column {
    width: 50% !important;
    max-width: 50% !important;
  }
  .views-main--group {
    width: 50%!important;
    max-width: 50% !important;
  }
}

